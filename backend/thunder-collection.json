{
  "info": {
    "name": "Ecoweave Backend - Thunder/Postman",
    "_postman_id": "ecoweave-backend-collection",
    "description": "Collection to test Ecoweave backend endpoints. Import into Thunder Client or Postman.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health (GET /)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/"
      }
    },
    {
      "name": "Auth - Login (POST /api/auth/login)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{adminUser}}\",\n  \"password\": \"{{adminPass}}\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      }
    },
    {
      "name": "Products - List (GET /api/products)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/products"
      }
    },
    {
      "name": "Products - Get by productId (GET /api/products/:productId)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/products/{{productId}}"
      }
    },
    {
      "name": "Products - Create (POST /api/products) [admin]",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{JWT}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"PRD001\",\n  \"name\": \"Sample Product\",\n  \"description\": \"Example description\",\n  \"imageUrl\": \"https://example.com/image.jpg\"\n}"
        },
        "url": "{{baseUrl}}/api/products"
      }
    },
    {
      "name": "Products - Update Stage (PUT /api/products/:productId/stage/:stage) [role-specific]",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{JWT}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"water\": 10,\n  \"co2\": 1.5,\n  \"energy\": 5\n}"
        },
        "url": "{{baseUrl}}/api/products/{{productId}}/stage/{{stage}}"
      }
    },
    {
      "name": "Products - Add Review (POST /api/products/:productId/reviews)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Doe\",\n  \"message\": \"Great product!\",\n  \"rating\": 5\n}"
        },
        "url": "{{baseUrl}}/api/products/{{productId}}/reviews"
      }
    }
  ]
}
